<h1><span class="label label-warning">Lista de Cronograma de vuelos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ruta</th>
      <th>Piloto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.route.vuelo %></td>
        <td><%= schedule.pilot_id %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<h1>Listing Passengers</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Route</th>
      <th>Nombre</th>
      <th>Identificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= passenger.fecha_id %></td>
        <td><%= passenger.route_id %></td>
        <td><%= passenger.nombre %></td>
        <td><%= passenger.identificacion %></td>
        <td><%= link_to 'Show', passenger %></td>
        <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
        <td><%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Mostrar rutas de viaje', passenger_trip_path(passenger)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Passenger', new_passenger_path %>

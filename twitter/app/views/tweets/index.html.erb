<h1> Lista tweets</h1>
<%= link_to "agregar Tweet", new_tweet_path %>

<ol>
	<% @tweets.each do |tweet| %>
	<li><%= tweet.message %>
	<%= link_to "editar", edit_tweet_path(tweet) %>
	<%= link_to "eliminar", tweet_path(tweet),method: :delete, data:{confirm:"estas seguro?"} %>

	 </li>
	<% end %>
</ol>

